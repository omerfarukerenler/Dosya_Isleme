<!DOCTYPE html>

<head runat="server">
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/Views/Shared/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>

        .button{

            color : chocolate


        }



    </style>

</head>
<body style="padding-top : 10px">
    <div class="col-xs-8 col-xs-offset-2">
        <form id="form1" runat="server" class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Customer Search Page</h3>
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <label for="inputFirstName" class="control-label col-xs-2"></label>
                    </div>
                    <div class="">
                        <input type="text" runat="server" class="form-control" id="inputFirstName" placeholder="FirstName" />
                    </div>

                    <div class="form-group">
                        <label for="inputLastName" class="control-label col-xs-2"></label>
                    </div>
                    <div class="">
                        <input type="text" runat="server" class="form-control" id="Text1" placeholder="LastName" />
                    </div>

                    <div class="form-group">
                        <label for="inputAddress" class="control-label col-xs-2"></label>
                    </div>
                    <div class="">
                        <input type="text" runat="server" class="form-control" id="Text2" placeholder="Address" />
                    </div>

                    <div class="form-group">
                        <label for="Phone" class="control-label col-xs-2"></label>
                    </div>
                    <div class="">
                        <input type="number" runat="server" class="form-control" id="Text3" placeholder="PhoneNumber" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-xs-offset-2">
                        <button class="button">Search</button>
                    </div>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3>Search Result</h3>



                    </div>
                    <div class="panel-body">
                        <div class="">
                            <asp:GridView CssClass="table table-bordered" ID="gvSearchResults" runat="server"></asp:GridView>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

</body>
